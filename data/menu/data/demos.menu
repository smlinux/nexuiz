// Property of Alientrap
//
// data/demos.menu

Item DataContainer Demos
{
	Item DataContainer FileList
	{
		Item DataLink_Nex_FileList Demos
		{
			normal		"dem"
			selected	"demos/"
		}
	}
	Item Data_Cvar AutoDemo
	{
		cvarName	"cl_autodemo"
		defValue	0

		[DataLink_OnOffSwitch]
	}

	Item Data_Cvar AutoDemoFormat
	{
		cvarName	"cl_autodemo_nameformat"
		defValue	"demos/%Y-%m-%d_%H-%M"

		Item DataLink_Text Text
		{
			link		"##up"
			maxValue	64
		}
	}
}
