#if 0
"Perl code to convert this to a skinvalues.txt file.";
while(<DATA>)
{
	chomp;
	if(/^\s*(?:SKINFLOAT|SKINVECTOR)\(([A-Z_]+), ([-'0-9. ]+)\);$/)
	{
		printf "%-31s %s\n", $1, $2;
	}
	elsif(/^\s*SKINSTRING\(([A-Z_]+), "(.*)"\);$/)
	{
		printf "//   uses \"$2\" images\n";
	}
	elsif(/^$/)
	{
		print "\n";
	}
	elsif(/^\s+\/\/ (.*)$/)
	{
		print "// $1\n";
	}
	elsif(/^SKINBEGIN$|^SKINEND$|^#endif$/)
	{
	}
	else
	{
		print "!!! $_\n";
	}
}
